rules3label = Label(root, text="3) You have 10 attempts to defuse the bomb.").grid(row=4,column=5)
rules4label = Label(root, text="4) Use the hints provided to determine the solution.").grid(row=5,column=5)

num1 = Button(root, text="1", padx=40, pady=15, borderwidth=3, command=lambda: button_click(1)).grid(row=2, column=0)
num2 = Button(root, text="2", padx=40, pady=15, borderwidth=3, command=lambda: button_click(2)).grid(row=2, column=1)
num3 = Button(root, text="3", padx=40, pady=15, borderwidth=3, command=lambda: button_click(3)).grid(row=2, column=2)
num4 = Button(root, text="4", padx=40, pady=15, borderwidth=3, command=lambda: button_click(4)).grid(row=2, column=3)
num5 = Button(root, text="5", padx=40, pady=15, borderwidth=3, command=lambda: button_click(5)).grid(row=2, column=4)
num6 = Button(root, text="6", padx=40, pady=15, borderwidth=3, command=lambda: button_click(6)).grid(row=4, column=0)
num7 = Button(root, text="7", padx=40, pady=15, borderwidth=3, command=lambda: button_click(7)).grid(row=4, column=1)
num8 = Button(root, text="8", padx=40, pady=15, borderwidth=3, command=lambda: button_click(8)).grid(row=4, column=2)
num9 = Button(root, text="9", padx=40, pady=15, borderwidth=3, command=lambda: button_click(9)).grid(row=4, column=3)
num0 = Button(root, text="0", padx=40, pady=15, borderwidth=3, command=lambda: button_click(0)).grid(row=4, column=4)

e = Entry(root, width=5, borderwidth=3)
e.grid(row=7, column=2, padx=5, pady=5)

cipher_box1 = Button(root, text="CIPHER KEY 1", padx=10, pady=15, borderwidth=3, command=lambda: field_submit(num,1))
cipher_box1.grid(row=8,column=0)
cipher_box2 = Button(root, text="CIPHER KEY 2", padx=10, pady=15, borderwidth=3, command=lambda: field_submit(num,2))
cipher_box2.grid(row=8,column=1,columnspan=1)
cipher_box3 = Button(root, text="CIPHER KEY 3", padx=10, pady=15, borderwidth=3, command=lambda: field_submit(num,3))
cipher_box3.grid(row=8,column=3)
cipher_box4 = Button(root, text="CIPHER KEY 4", padx=10, pady=15, borderwidth=3, command=lambda: field_submit(num,4))
cipher_box4.grid(row=8,column=4)

c1 = Entry(root, width=5, borderwidth=3)
c1.grid(row=9, column=0, padx=10)
c1.insert(0,0)
c2 = Entry(root, width=5, borderwidth=3)
c2.grid(row=9, column=1, padx=10)
