c4.grid(row=9, column=4, padx=10)
c4.insert(0,0)

submission = Button(root,text="Attempt to defuse the bomb", padx=10, command=lambda: check_correct(answer))
submission.grid(row=9, column=2)


result1 = Label(root,text="Results:")
result1.grid(row=10, column=0)
result2 = Entry(root, width=82, borderwidth=3)
result2.grid(row=11, column=0, columnspan=5)

